<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Recieved Messages

    <a data-toggle="collapse" href="#user_recieved_messages_new_form">
      Add direct message
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.recieved_messages.each do |direct_message| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to direct_message, direct_message %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_recieved_messages_new_form">
        <%= render partial: "users/user_recieved_messages_new_form" %>
      </div>
    </div>

  </ul>
</div>
