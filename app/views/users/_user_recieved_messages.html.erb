<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Recieved Messages

    <a data-toggle="collapse" href="#user_recieved_messages_new_form">
      Add direct message
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.recieved_messages.each do |direct_message| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to direct_message, direct_message %>
        <!-- Show link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_recieved_messages_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "users/user_recieved_messages_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
