<% was_validated = post.errors.any? %>

<%= form_with(model: post, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for user_id start -->
  <div class="form-group">
    <% user_class = "form-control" %>
    <% user_was_invalid = post.errors.include?(:user) %>

    <% if was_validated %>
      <% if user_was_invalid %>
        <% user_class << " is-invalid" %>
      <% else %>
        <% user_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_id %>
    <!-- Input for user_id start -->
    <%= f.number_field :user_id, class: user_class, placeholder: "Enter user" %>
    <!-- Input for user_id end -->
    <% if user_was_invalid %>
      <% post.errors.full_messages_for(:user).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for user_id end -->
  <!-- Label and input for body start -->
  <div class="form-group">
    <% body_class = "form-control" %>
    <% body_was_invalid = post.errors.include?(:body) %>

    <% if was_validated %>
      <% if body_was_invalid %>
        <% body_class << " is-invalid" %>
      <% else %>
        <% body_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :body %>
    <!-- Input for body start -->
    <%= f.text_area :body, class: body_class, placeholder: "Enter body" %>
    <!-- Input for body end -->
    <% if body_was_invalid %>
      <% post.errors.full_messages_for(:body).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for body end -->
  <!-- Label and input for reply_to_id start -->
  <div class="form-group">
    <% reply_to_class = "form-control" %>
    <% reply_to_was_invalid = post.errors.include?(:reply_to) %>

    <% if was_validated %>
      <% if reply_to_was_invalid %>
        <% reply_to_class << " is-invalid" %>
      <% else %>
        <% reply_to_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :reply_to_id %>
    <!-- Input for reply_to_id start -->
    <%= f.number_field :reply_to_id, class: reply_to_class, placeholder: "Enter reply to" %>
    <!-- Input for reply_to_id end -->
    <% if reply_to_was_invalid %>
      <% post.errors.full_messages_for(:reply_to).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for reply_to_id end -->
  <!-- Label and input for repost_of_id start -->
  <div class="form-group">
    <% repost_of_class = "form-control" %>
    <% repost_of_was_invalid = post.errors.include?(:repost_of) %>

    <% if was_validated %>
      <% if repost_of_was_invalid %>
        <% repost_of_class << " is-invalid" %>
      <% else %>
        <% repost_of_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :repost_of_id %>
    <!-- Input for repost_of_id start -->
    <%= f.number_field :repost_of_id, class: repost_of_class, placeholder: "Enter repost of" %>
    <!-- Input for repost_of_id end -->
    <% if repost_of_was_invalid %>
      <% post.errors.full_messages_for(:repost_of).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for repost_of_id end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
